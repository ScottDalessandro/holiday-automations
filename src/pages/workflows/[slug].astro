---
import { getCollection } from 'astro:content';
import fs from 'node:fs';
import path from 'node:path';

export const prerender = true;

export async function getStaticPaths() {
  const lessons = await getCollection('lessons');
  return lessons
    .filter((lesson) => lesson.data.workflowFile)
    .map((lesson) => ({
      params: { slug: lesson.slug },
      props: { lesson },
    }));
}

const { lesson } = Astro.props;
const data = lesson.data;

// Load workflow JSON from file
let workflowJson = '';
let workflowParsed = null;
if (data.workflowFile) {
  try {
    const workflowPath = path.join(process.cwd(), 'public', data.workflowFile);
    workflowJson = fs.readFileSync(workflowPath, 'utf-8');
    workflowParsed = JSON.parse(workflowJson);
    // Pretty print with 2-space indentation
    workflowJson = JSON.stringify(workflowParsed, null, 2);
  } catch (e) {
    console.warn(`Could not load workflow file: ${data.workflowFile}`);
  }
}

const nodeCount = workflowParsed?.nodes?.length || 0;

// Server-side syntax highlighting for JSON
function highlightJsonServer(json: string): string {
  // Escape HTML
  let escaped = json
    .replace(/&/g, '&amp;')
    .replace(/</g, '&lt;')
    .replace(/>/g, '&gt;');

  // Apply syntax highlighting
  return escaped
    // Keys (before colon) - Christmas red
    .replace(/"([^"\\]|\\.)*"\s*:/g, (match) => {
      const key = match.slice(0, -1);
      return `<span class="json-key">${key}</span>:`;
    })
    // String values (after colon) - Christmas green
    .replace(/:\s*"([^"\\]|\\.)*"/g, (match) => {
      const colonSpace = match.match(/^:\s*/)![0];
      const value = match.slice(colonSpace.length);
      return `${colonSpace}<span class="json-string">${value}</span>`;
    })
    // Numbers - Gold
    .replace(/:\s*(-?\d+\.?\d*)/g, ': <span class="json-number">$1</span>')
    // Booleans - Candy cane pink
    .replace(/:\s*(true|false)/g, ': <span class="json-boolean">$1</span>')
    // Null - Snow white
    .replace(/:\s*(null)/g, ': <span class="json-null">$1</span>')
    // Brackets - Icy blue
    .replace(/([[{}\]])/g, '<span class="json-bracket">$1</span>');
}

const highlightedJson = highlightJsonServer(workflowJson);
