---
interface Step {
  title: string;
  content: string;
}

interface Props {
  steps: Step[];
}

const { steps } = Astro.props;
---

<div id="step-by-step" class="fade-up bg-slate-900/70 border border-slate-800 rounded-2xl p-8 backdrop-blur-sm scroll-mt-28">
    <div class="flex items-center gap-3 mb-8">
        <span class="text-2xl">&#128203;</span>
        <h2 class="text-xl font-bold text-white tracking-tight">Step-by-Step Guide</h2>
    </div>

    <div class="space-y-8">
        {steps.map((step, index) => (
            <div class="flex gap-4">
                <div class="w-8 h-8 rounded-full bg-rose-500 text-white font-bold flex items-center justify-center shrink-0 shadow-lg shadow-rose-500/20 text-sm">
                    {index + 1}
                </div>
                <div>
                    <h3 class="font-semibold text-white mb-1">{step.title}</h3>
                    <p class="text-slate-400 text-sm leading-relaxed" set:html={step.content} />
                </div>
            </div>
        ))}
    </div>
</div>
