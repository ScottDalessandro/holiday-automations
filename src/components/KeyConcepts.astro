---
interface Concept {
  icon: string;
  title: string;
  description: string;
}

interface Props {
  concepts: Concept[];
}

const { concepts } = Astro.props;
---

<div id="key-concepts" class="fade-up bg-gradient-to-br from-sky-500/10 to-sky-500/5 border border-sky-500/20 rounded-2xl p-8 scroll-mt-28">
    <div class="flex items-center gap-3 mb-6">
        <span class="text-2xl">&#128161;</span>
        <h2 class="text-xl font-bold text-white tracking-tight">Key Concepts</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {concepts.map((concept, index) => (
            <div class={`bg-slate-900/60 rounded-xl p-5 border border-sky-500/10 ${index === concepts.length - 1 && concepts.length % 2 !== 0 ? 'md:col-span-2' : ''}`}>
                <h4 class="font-semibold text-amber-300 text-sm flex items-center gap-2">
                    <span>{concept.icon}</span> {concept.title}
                </h4>
                <p class="text-slate-400 text-xs mt-2 leading-relaxed" set:html={concept.description} />
            </div>
        ))}
    </div>
</div>
