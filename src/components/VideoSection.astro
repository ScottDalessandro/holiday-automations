---
// Video/About section component
const videoId = 'M0PRa5_-fPI';
const thumbnailUrl = `https://img.youtube.com/vi/${videoId}/maxresdefault.jpg`;
---

<!-- About / Video Section -->
<section id="about" class="w-full max-w-6xl mx-auto px-6 py-20">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">

        <!-- Video Left -->
        <div id="video-container" class="fade-up relative aspect-video bg-slate-900 rounded-2xl border border-slate-800 shadow-2xl overflow-hidden group cursor-pointer hover:border-slate-600 transition-all" data-video-id={videoId}>
            <!-- YouTube Thumbnail -->
            <img
                src={thumbnailUrl}
                alt="Intro video thumbnail"
                class="absolute inset-0 w-full h-full object-cover"
                loading="lazy"
            />
            <!-- Overlay gradient -->
            <div class="absolute inset-0 bg-gradient-to-t from-slate-950/60 to-transparent"></div>
            <div class="absolute inset-0 flex items-center justify-center">
                <!-- Play Button -->
                <div class="w-20 h-20 rounded-full bg-rose-600/90 backdrop-blur-sm border border-rose-500/50 flex items-center justify-center shadow-2xl group-hover:scale-110 group-hover:bg-rose-500 transition-all duration-300">
                    <div class="ml-1 w-0 h-0 border-t-[12px] border-t-transparent border-l-[20px] border-l-white border-b-[12px] border-b-transparent"></div>
                </div>
            </div>
        </div>

        <!-- Content Right -->
        <div class="fade-up space-y-6">
            <div>
                <span class="text-rose-400 text-xs font-bold tracking-widest uppercase mb-2 block">Meet The Project</span>
                <h2 class="text-3xl md:text-4xl font-bold text-white tracking-tight">What You're Getting Into</h2>
            </div>

            <p class="text-slate-400 leading-relaxed">
                This isn't just theory. It's a free passion project designed to teach you n8n through festive, practical examples. Spend 30 minutes, save hours of holiday stress.
            </p>

            <ul class="space-y-4 mt-2">
                <li class="flex items-center gap-3 text-slate-300">
                    <div class="w-6 h-6 rounded-full bg-emerald-500/10 flex items-center justify-center text-emerald-400 shrink-0">
                        <iconify-icon icon="lucide:check" width="14" stroke-width="3"></iconify-icon>
                    </div>
                    <span class="text-sm">5-8 holiday themed automations</span>
                </li>
                <li class="flex items-center gap-3 text-slate-300">
                    <div class="w-6 h-6 rounded-full bg-emerald-500/10 flex items-center justify-center text-emerald-400 shrink-0">
                        <iconify-icon icon="lucide:check" width="14" stroke-width="3"></iconify-icon>
                    </div>
                    <span class="text-sm">Complete beginner friendly workflows</span>
                </li>
                <li class="flex items-center gap-3 text-slate-300">
                    <div class="w-6 h-6 rounded-full bg-emerald-500/10 flex items-center justify-center text-emerald-400 shrink-0">
                        <iconify-icon icon="lucide:check" width="14" stroke-width="3"></iconify-icon>
                    </div>
                    <span class="text-sm">Real logic you can use for business later</span>
                </li>
            </ul>

            <div class="pt-4 flex items-center gap-3 border-t border-slate-800/50">
                <div class="w-10 h-10 rounded-full bg-slate-800 border border-slate-700 flex items-center justify-center overflow-hidden">
                    <iconify-icon icon="lucide:user" class="text-slate-400"></iconify-icon>
                </div>
                <div class="flex flex-col">
                    <span class="text-sm font-medium text-white">Built by Scott</span>
                    <span class="text-xs text-slate-500">Automation Enthusiast</span>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
// Video embed on click
const videoContainer = document.getElementById('video-container');
if (videoContainer) {
    videoContainer.addEventListener('click', () => {
        const videoId = videoContainer.dataset.videoId;
        if (videoId) {
            const iframe = document.createElement('iframe');
            iframe.src = `https://www.youtube.com/embed/${videoId}?autoplay=1&rel=0`;
            iframe.className = 'absolute inset-0 w-full h-full';
            iframe.setAttribute('frameborder', '0');
            iframe.setAttribute('allow', 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture');
            iframe.setAttribute('allowfullscreen', '');

            // Clear container and add iframe
            videoContainer.innerHTML = '';
            videoContainer.appendChild(iframe);
            videoContainer.classList.remove('cursor-pointer');
        }
    });
}
</script>
