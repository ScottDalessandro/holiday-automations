---
interface Props {
  tutorialNumber: number;
  icon: string;
  title: string;
  description?: string;
}

const { tutorialNumber, icon, title, description } = Astro.props;
---

<header class="w-full max-w-4xl mx-auto px-6 text-center mb-16 relative">
    <div class="fade-up inline-flex items-center gap-2 px-3 py-1 rounded-full bg-rose-500/10 border border-rose-500/20 text-rose-400 text-xs font-bold tracking-wider uppercase mb-6 shadow-[0_0_15px_-3px_rgba(244,63,94,0.2)]">
        <span>TUTORIAL {tutorialNumber}</span>
    </div>

    <div class="fade-up text-6xl mb-6 filter drop-shadow-2xl">{icon}</div>

    <h1 class="fade-up text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight mb-6 text-white">
        <span class="bg-gradient-to-r from-rose-400 to-amber-400 bg-clip-text text-transparent">{title}</span>
    </h1>

    {description && (
        <p class="fade-up text-lg text-slate-400 max-w-2xl mx-auto leading-relaxed font-light" set:html={description} />
    )}
</header>
